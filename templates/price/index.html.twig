{% extends 'base.html.twig' %}

{% block title %}Liste des tarifs{% endblock %}

{% block body %}
    <div class="container-fluid mx-0 px-0 py-3 price-index">
        <h1>Liste des tarifs</h1>

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for price in prices %}
                <tr>
                    <td>{{ price.name }}</td>
                    <td>{{ price.amount }} euros</td>
                    <td>
                        <a href="{{ path('price_show', {'id': price.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('price_edit', {'id': price.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun tarif trouv√© ...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class=" container-fluid d-flex justify-content-end">
            <a class="btn btn-outline-success" href="{{ path('price_new') }}">Create un tarif</a>
        </div>
    </div>
{% endblock %}
