{% extends 'base.html.twig' %}

{% block title %}Billeterie{% endblock %}

{% block body %}
    <div class="container ticketing mb-2">
        <h1 class="mb-5 text-center">Tarifs</h1>
        <div class="d-flex justify-content-center row">
            <div class="col-md-6 col-lg-6">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="price-box col-md-6 col-lg-4 offset-lg-1">
                <div class="text-center py-3 box-head">
                    <h3>Prix</h3>
                </div>
                <div class="box-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>Total adulte :</div>
                        <div class="mx-2" id="adultPrice">0,00 €</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>Total enfants :</div>
                        <div class="mx-2" id="childPrice">0,00 €</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>Total senior :</div>
                        <div class="mx-2" id="seniorPrice">0,00 €</div>
                    </div>
                </div>
                <div class="box-bottom py-4 px-3 d-flex justify-content-between">
                    <div>Prix total :</div>
                    <div class="mx-2" id="totalPrice">0,00 €</div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('ticketing') }}
{% endblock %}
