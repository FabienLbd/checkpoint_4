{% extends 'base.html.twig' %}

{% block title %}Nos évènements{% endblock %}

{% block body %}
    <div class="act-background">
        <div class="container mx-auto py-5 show-acts">
            <div class="text-center mb-5">
                <h1>Nos performances</h1>
            </div>
            <div class="card-columns">
                {% for act in acts %}
                    <div class="card">
                        <img src="/uploads/event/{{ act.actImageName }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ act.name }}</h5>
                            <p class="card-text">{{ act.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
