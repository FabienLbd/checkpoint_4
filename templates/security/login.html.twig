{% extends 'base.html.twig' %}

{% block title %}Connectez vous!{% endblock %}

{% block body %}
    <div class="background-container">
        <div class="container row mx-auto d-flex justify-content-center login">
            <div class="col-lg-8 login-box">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <h1 class="h3 mb-3 font-weight-normal">Connectez vous svp</h1>
                    <div class="my-3">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" required autofocus>
                    </div>
                    <div class="my-3">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-lg btn-primary login-btn" type="submit">
                            Connection
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
