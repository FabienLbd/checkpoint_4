{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="container event-show">
        <h1>Fiche de l'évènement</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ event.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ event.country }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ event.town }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ event.performanceDate ? event.performanceDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>mis à jour le</th>
                    <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-success" href="{{ path('event_index') }}">Revenir à la liste</a>
            <a class="btn btn-outline-success" href="{{ path('event_edit', {'id': event.id}) }}">Editer</a>
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
